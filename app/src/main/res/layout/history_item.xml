<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/BuyHistory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    android:outlineAmbientShadowColor="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/tvHistoryProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="P. Name:"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvHistoryTransDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHistoryProductName"
            android:layout_margin="10dp"
            android:text="T. Date:"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvHistoryProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHistoryTransDate"
            android:layout_margin="10dp"
            android:text="Price:"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/HistoryDeletebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            android:tint="#CCFF0000"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:background="?android:selectableItemBackground"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>